@page "/login"
@using HerPace.Client.Services
@using System.ComponentModel.DataAnnotations
@using System.Text.Json
@using Microsoft.JSInterop
@inject ApiClient ApiClient
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Log In - HerPace</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="3" Class="pa-8">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
            Welcome Back
        </MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary" Class="mb-6">
            Log in to continue your training
        </MudText>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4" aria-live="assertive">
                @_errorMessage
            </MudAlert>
        }

        <EditForm Model="@_model" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <MudTextField @bind-Value="_model.Email"
                          For="@(() => _model.Email)"
                          Label="Email"
                          Variant="Variant.Outlined"
                          Required="true"
                          InputType="InputType.Email"
                          Class="mb-4"
                          aria-label="Email address"
                          aria-required="true" />

            <MudTextField @bind-Value="_model.Password"
                          For="@(() => _model.Password)"
                          Label="Password"
                          Variant="Variant.Outlined"
                          Required="true"
                          InputType="InputType.Password"
                          Class="mb-6"
                          aria-label="Password"
                          aria-required="true" />

            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Disabled="@_isLoading"
                       aria-label="Log in to account">
                @if (_isLoading)
                {
                    <MudProgressCircular Class="mr-2" Size="Size.Small" Indeterminate="true" />
                    <span>Logging In...</span>
                }
                else
                {
                    <span>Log In</span>
                }
            </MudButton>
        </EditForm>

        <MudDivider Class="my-6" />

        <MudText Typo="Typo.body2" Align="Align.Center">
            Don't have an account?
            <MudLink Href="/signup" Color="Color.Primary" aria-label="Go to signup page">Sign Up</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    private LoginModel _model = new();
    private bool _isLoading = false;
    private string _errorMessage = string.Empty;

    private async Task HandleLogin()
    {
        _isLoading = true;
        _errorMessage = string.Empty;

        try
        {
            var response = await ApiClient.PostAsync<LoginRequest, AuthResponse>(
                "/api/auth/login",
                new LoginRequest
                {
                    Email = _model.Email,
                    Password = _model.Password
                });

            if (response != null)
            {
                // Store JWT token in localStorage
                await JSRuntime.InvokeVoidAsync("localStorage.setItem", "authToken", response.Token);

                // Set token in ApiClient for authenticated requests
                ApiClient.SetAuthToken(response.Token);

                // Determine where to navigate based on user's onboarding status
                await NavigateToAppropriatePageAsync();
            }
            else
            {
                _errorMessage = "Invalid email or password.";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task NavigateToAppropriatePageAsync()
    {
        // Step 1: Check if user has a profile
        try
        {
            var profile = await ApiClient.GetAsync<ProfileResponse>("/api/profiles/me");
            // Profile exists, check for active plan
        }
        catch
        {
            // No profile (404) or error - redirect to profile setup
            Navigation.NavigateTo("/onboarding/profile");
            return;
        }

        // Step 2: Check if user has an active training plan
        try
        {
            var activePlan = await ApiClient.GetAsync<PlanResponse>("/api/plans/active");
            // User has an active plan, show dashboard
            Navigation.NavigateTo("/dashboard");
        }
        catch
        {
            // No active plan (404) or error - redirect to race entry
            Navigation.NavigateTo("/onboarding/race");
        }
    }

    private class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }

    private class LoginRequest
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }

    private class AuthResponse
    {
        public Guid UserId { get; set; }
        public string Email { get; set; } = string.Empty;
        public string Token { get; set; } = string.Empty;
        public DateTime ExpiresAt { get; set; }
    }

    private class ProfileResponse
    {
        public Guid Id { get; set; }
        public string Name { get; set; } = string.Empty;
    }

    private class PlanResponse
    {
        public Guid Id { get; set; }
        public string PlanName { get; set; } = string.Empty;
    }
}
