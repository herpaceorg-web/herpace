@page "/"

<PageTitle>HerPace - Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
    <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-2">Welcome to HerPace</MudText>
    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Primary" Class="mb-6">
        Hormone-Aware Training Plans for Women Runners
    </MudText>

    <MudPaper Class="pa-6 mb-4" Elevation="2">
        <MudText Typo="Typo.body1" Class="mb-4">
            HerPace creates personalized training plans that adapt to your menstrual cycle,
            helping you train smarter and perform better by aligning workouts with your hormonal phases.
        </MudText>

        <MudText Typo="Typo.body2" Class="mb-2">
            <strong>Features:</strong>
        </MudText>
        <MudList T="string" Dense="true">
            <MudListItem T="string" Icon="@Icons.Material.Filled.TrendingUp">
                AI-powered training plans optimized for your cycle
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.CalendarMonth">
                Cycle phase tracking and workout adjustments
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.DirectionsRun">
                Personalized for your fitness level and race goals
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Schedule">
                Flexible scheduling that works with your body
            </MudListItem>
        </MudList>
    </MudPaper>

    <MudGrid Justify="Justify.Center" Spacing="3">
        <MudItem xs="12" sm="6">
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Size="Size.Large"
                       Href="/signup">
                Get Started
            </MudButton>
        </MudItem>
        <MudItem xs="12" sm="6">
            <MudButton Variant="Variant.Outlined"
                       Color="Color.Primary"
                       FullWidth="true"
                       Size="Size.Large"
                       Href="/login">
                Sign In
            </MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>

