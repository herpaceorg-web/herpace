<MudAlert Severity="Severity.Info"
          Variant="Variant.Filled"
          Class="mb-4"
          CloseIconClicked="OnDismissClicked"
          ShowCloseIcon="true">
    <div class="d-flex align-center">
        <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Class="mr-3" Size="Size.Large" />
        <div>
            <MudText Typo="Typo.h6" Class="mb-2">Your Plan Has Been Adjusted</MudText>
            <MudText Typo="Typo.body2">@Summary</MudText>
        </div>
    </div>
</MudAlert>

@code {
    [Parameter]
    public string Summary { get; set; } = string.Empty;

    [Parameter]
    public EventCallback OnDismiss { get; set; }

    private async Task OnDismissClicked()
    {
        await OnDismiss.InvokeAsync();
    }
}
